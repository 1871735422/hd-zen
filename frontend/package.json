{
  "name": "lumizen-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && echo 'Copying static assets...' && cp -r .next/static .next/standalone/.next/ && cp -r public .next/standalone/ && echo 'Build completed successfully'",
    "start": "next start",
    "serve": "node .next/standalone/server.js",
    "check-production": "./scripts/check-production.sh",
    "build:image": "docker buildx build --platform linux/amd64 -t hd-zen-web:latest .",
    "save": "docker save hd-zen-web:latest -o hd-zen-web.tar && gzip hd-zen-web.tar",
    "upload": "scp hd-zen-web.tar.gz root@zenweb.huidengzg.com:/opt/docker-images/",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rimraf .next node_modules",
    "prepare": "husky",
    "font:subset": "node scripts/subset-fonts.cjs"
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@microsoft/clarity": "^1.0.0",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@mui/material-nextjs": "^7.1.1",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "next": "15.3.3",
    "pocketbase": "^0.26.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.10",
    "typescript": "^5",
    "fontmin": "^0.9.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}

{
  "name": "lumizen-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "serve": "node .next/standalone/server.js",
    "check-production": "./scripts/check-production.sh",
    "build:image": "docker buildx build --platform linux/amd64 -t hd-zen-web:latest .",
    "save": "docker save hd-zen-web:latest -o hd-zen-web.tar && gzip hd-zen-web.tar",
    "upload": "scp hd-zen-web.tar.gz root@zenweb.huidengzg.com:/opt/docker-images/",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:video": "playwright test e2e/video-playback-download.spec.ts",
    "test:e2e:consistency": "playwright test e2e/resource-consistency.spec.ts",
    "test:e2e:prod": "cross-env PLAYWRIGHT_TEST_BASE_URL=https://zenweb.huidengzg.com playwright test",
    "test:e2e:prod:headed": "cross-env PLAYWRIGHT_TEST_BASE_URL=https://zenweb.huidengzg.com playwright test --headed",
    "clean": "rimraf .next node_modules",
    "prepare": "husky",
    "font:subset": "node scripts/subset-fonts.cjs",
    "browserslist": "exec browserslist"
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@microsoft/clarity": "^1.0.2",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "@mui/material-nextjs": "^7.3.6",
    "@vercel/analytics": "^1.6.1",
    "artplayer": "^5.3.0",
    "fontmin": "^1.1.1",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "next": "^15.5.7",
    "pocketbase": "^0.26.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.3",
    "@netlify/plugin-nextjs": "^5.15.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.19.25",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "browserslist": "^4.28.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "netlify-cli": "^23.12.3",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
